<% provide :title, t(".title") %>

<section class="order-history pt-3 pb-5">
  <h2 class="text-center mb-3"><%= t ".title" %></h2>
  <div class="table-container">
    <%= render "filter_form" %>
    <div class="history-table">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col"><%= t ".time" %></th>
            <th scope="col"><%= t ".address" %></th>
            <th scope="col"><%= t ".total_amount" %></th>
            <th scope="col"><%= t ".status" %></th>
            <th scope="col" class="text-center"><%= t ".detail" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @orders %>
        </tbody>
      </table>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</section>
