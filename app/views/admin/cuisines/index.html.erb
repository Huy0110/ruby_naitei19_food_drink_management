<div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-0"><%= t ".title" %></h1>
  <div>
    <%= link_to t(".new"), new_admin_cuisine_path, class: "btn btn-primary mr-2" %>
    <%= link_to t(".back"), admin_cuisines_path, class: "btn btn-secondary" %>
  </div>
</div>
<div>
  <%= render "admin/shared/search_bar" %>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
<table class="table">
  <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".description" %></th>
      <th><%= t ".price" %></th>
      <th><%= t ".discount" %></th>
      <th class="operations"><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin/shared/cuisine", collection: @cuisines %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
