<div class="d-flex justify-content-between align-items-center">
  <h1 class="mb-0"><%= t ".title" %></h1>
  <div>
    <%= link_to t(".new"), new_admin_category_path, class: "btn btn-primary mr-2" %>
    <%= link_to t(".back"), admin_categories_path, class: "btn btn-secondary" %>
  </div>
</div>
<div>
  <%= render "admin/shared/category_search_bar" %>
</div>
<%== pagy_bootstrap_nav(@pagy) %>
<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name, t(".name"), default_order: :desc) %></th>
      <th><%= t ".slug" %></th>
      <th><%= t ".cuisines_count" %></th>
      <th class="operations"><%= t ".actions" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "admin/shared/category", collection: @categories %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
