<% if @order.present? %>
<div class="order-container">
  <h1><%= t("order.your_order") %></h1>
  <% total_price = 0 %>
  <% @order.each do |order_item| %>
    <div class="order-item">
      <h2><%= order_item["cuisine"]["name"] %></h2>
      <p class="price">Price: <%= number_to_currency(order_item["cuisine"]["price"]) %></p>
      <ul class="option-list">
        <% order_item["selected_option_ids"].each do |option_id| %>
          <% if option_id.to_i > 0 %>
            <% option = Option.find(option_id.to_i) %>
            <li><%= option.name %> - Price: <%= number_to_currency(option.price) %></li>
            <% total_price += option.price %>
          <% end %>
        <% end %>
      </ul>
      <% total_price += order_item["cuisine"]["price"] %>
    </div>
  <% end %>
  <h3 class="total-price"><%= t("order.total_price") number_to_currency(total_price) %></h3>
</div>
<% else %>
  <p><%= t("order.no_order") %></p>
<% end %>
